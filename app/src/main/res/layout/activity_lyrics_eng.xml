<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">
      <in.beyonitysoftwares.besttamilsongs.views.LyricView
                    android:id="@+id/eng_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fadeInFadeOut="true"
                    app:highlightColor="@color/md_white_1000"
                    app:hint="No Lyrics"
                    app:hintColor="@color/md_grey_400"
                    app:lineSpace="15dp"
                    app:textAlign="left"
                    app:textSize="18sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:padding="5dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="3dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <in.beyonitysoftwares.besttamilsongs.views.LyricView
            android:id="@+id/eng_lyrics2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fadeInFadeOut="true"
            app:highlightColor="@color/md_white_1000"
            app:hint="No Lyrics"
            app:hintColor="@color/md_grey_400"
            app:lineSpace="15dp"
            app:textAlign="left"
            app:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <in.beyonitysoftwares.besttamilsongs.views.IconImageView
            android:id="@+id/dec_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="?roundSelector"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_dec_font_size" />

        <in.beyonitysoftwares.besttamilsongs.views.IconImageView
            android:id="@+id/inc_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="?roundSelector"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_inc_font_size" />

        <in.beyonitysoftwares.besttamilsongs.views.IconImageView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_refresh_black_24dp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
